<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#363B3D" android:endColor="#363B3D" android:angle="90" />
            <corners android:radius="2dp" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#282C2E" android:endColor="#282C2E" android:angle="270" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>