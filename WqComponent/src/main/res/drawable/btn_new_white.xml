<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#cbc9c9" android:endColor="#cbc9c9" android:angle="90" />
            <corners android:radius="2dp" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#d0d0d0" android:endColor="#d0d0d0" android:angle="270" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>