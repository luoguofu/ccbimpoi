<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <com.weqia.wq.component.view.picture.HackyViewPager
            android:id="@+id/image_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <include layout="@layout/view_reused_topbanner"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#cc000000"
            android:layout_alignParentBottom="true">


        <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/default_interval"
                android:paddingRight="@dimen/default_interval"
                android:text="编辑"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@android:color/transparent"/>


        <LinearLayout

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageButton
                    android:id="@+id/bt_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_interval"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/checkbox_source_selector"
                    android:background="@android:color/transparent"/>

            <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_interval"
                    android:paddingRight="@dimen/default_interval"
                    android:text="原图"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"/>


        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:gravity="center"
                      android:orientation="horizontal">
            <ImageButton
                    android:id="@+id/bt_sel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/check_box_selector"
                    android:background="@android:color/transparent"/>

            <TextView
                    android:id="@+id/tv_sel"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_interval"
                    android:paddingRight="@dimen/default_interval"
                    android:text="选择"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>