<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:minHeight="34dp"
    android:orientation="horizontal"
    tools:showIn="@layout/view_reused_sjz">

    <TextView
        android:id="@+id/webo_item_tv_after"
        style="@style/common_tv_webo_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="14:39:15" />

    <ImageView
        android:id="@+id/ivTagMans"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:padding="5dp"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/btn_biaoqian_people" />


    <TextView
        android:id="@+id/llIsPublic"
        style="@style/common_tv_webo_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/secret"
        android:drawablePadding="@dimen/half_interval"
        android:gravity="bottom"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:text="私密" />

    <LinearLayout
        android:id="@+id/llSendError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_small"
        android:gravity="left|center"
        android:minHeight="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSendDel"
            style="@style/cell_lv_item_tv_title_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_interval"
            android:text="删除"
            android:textColor="@color/delete_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSendRe"
            style="@style/cell_lv_item_tv_title_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_interval"
            android:text="发送"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>