<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <View
        android:id="@+id/view_empty"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/util_dialog_popup_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/double_interval"
        android:paddingRight="@dimen/double_interval">

        <TextView
            android:id="@+id/tv_full_dialog_title"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textColor="#6b757c"
            android:visibility="gone"
            android:text="" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/linear_full_dialog_buttons"
            style="@style/dialog_full_common"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/button_full_dialog_cancel"
            style="@style/dialog_full_cancel"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/util_dialog_cancel" />
    </LinearLayout>

</LinearLayout>