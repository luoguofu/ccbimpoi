<resources>

    <style name="tv_common_plain_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_plain_text_color</item>
    </style>

    <style name="tv_common_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:textColor">@color/default_button_text_color</item>
    </style>

    <!-- dialog -->
    <style name="dialog_fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/animationFade</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_fullscreen_top">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/animationTopDialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="animationFade">
        <item name="android:windowEnterAnimation">@anim/util_fading_in</item>
        <item name="android:windowExitAnimation">@anim/util_fading_out</item>
    </style>

    <style name="animationTopDialog">
        <item name="android:windowEnterAnimation">@anim/util_top_pop_show</item>
        <item name="android:windowExitAnimation">@anim/util_top_pop_hide</item>
    </style>

    <style name="dialog_full_common">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/default_dialog_title_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_full_cancel" parent="dialog_full_common">
        <item name="android:background">@drawable/util_com_alert_cancel</item>
    </style>

    <style name="dialog_full_danger" parent="dialog_full_common">
        <item name="android:background">@drawable/util_com_alert_danger</item>
    </style>
    
    <style name="dialog_full_blue" parent="dialog_full_common">
        <item name="android:background">@drawable/util_com_alert_blue</item>
    </style>

    <style name="dialog_full_normal" parent="dialog_full_common">
        <item name="android:textColor">#fe5454</item>
        <item name="android:background">@drawable/util_com_alert_normal</item>
    </style>

    <style name="dialog_text">
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">@dimen/default_dialog_text_size</item>
    </style>

    <style name="dialog_text.Title">
        <item name="android:textSize">@dimen/default_dialog_title_size</item>
    </style>

    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="common_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/util_selector_et</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:minHeight">40.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="common_search_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/util_selector_et</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/default_interval</item>
        <item name="android:paddingBottom">@dimen/default_interval</item>
        <item name="android:drawableLeft">@drawable/util_icon_ssuo</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="split">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">8.0dip</item>
        <item name="android:layout_height">5.0dip</item>
    </style>

    <style name="dlg_btn_common">
        <item name="android:textSize">@dimen/default_dialog_text_size</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/underline_color</item>
    </style>
    
    <style name="myProgressBarHui">
        <item name="android:indeterminateDrawable">@drawable/util_pb_animation_hui</item>
        <item name="android:minWidth">16dip</item>
        <item name="android:maxWidth">16dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>


    <style name="mProgressBarStyleSmall">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>
    <style name="mProgressBarStyleBig">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_big</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>


    <style name="Animations" />

